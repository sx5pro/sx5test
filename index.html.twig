<!DOCTYPE html>
<html>
    <head>
        <title>
            Softwares
        </title>
        <style>
            form {
                position: absolute;
                left: 1150px;
                top: 25px;
            }
            body {
                background-color: powderblue;
            }
        </style>
    </head>
    <body>
        <form action="form_login.php">
            <input type="submit" value="Login" />
        </form>
        {% for subject, software in data.content %}
            <section>
                <h3>{{ subject }}</h3>
                {% for item in software %}
                    <table style="border: 1px solid black;">
                        <tr>
                            <td>Name</td>
                            <td>{{ item.name }}</td>
                        </tr>
                        <tr>
                            <td>File</td>
                            <td><a href="{{item.file }}" download>{{item.file
                            }}</a></td>
                        </tr>
                        <tr>
                            <td>Changelog</td>
                            <td><a href="{{item.changelog }}">{{item.changelog}}</a></td>
                        </tr>
                        <tr>
                            <td>Description</td>
                            <td>{{ item.description }}</td>
                        </tr>
                    </table>
                {% endfor %}
            </section>
        {% endfor %}
    </body>
</html>